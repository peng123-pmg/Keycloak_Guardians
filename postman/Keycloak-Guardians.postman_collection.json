				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "username",
							"value": "admin",
							"description": "用户名",
							"type": "text"
						},
						{
							"key": "password",
							"value": "admin",
							"description": "真实密码",
							"type": "text"
						},
						{
							"key": "grant_type",
							"value": "password",
							"description": "固定值",
							"type": "text"
						},
						{
							"key": "client_id",
							"value": "backend-service",
							"description": "客户端id",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "http://localhost:8080/realms/guardians/protocol/openid-connect/token",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"realms",
						"guardians",
						"protocol",
						"openid-connect",
						"token"
					]
				}
			},
			"response": [],
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"if (!pm.response || pm.response.code !== 200) {",
							"    console.error('获取 Token 失败');",
							"    return;",
							"}",
							"const body = pm.response.json();",
							"pm.environment.set('access_token', body.access_token);",
							"pm.environment.set('refresh_token', body.refresh_token || '');",
							"pm.environment.set('token_type', body.token_type || 'Bearer');",
							"pm.environment.set('expires_in', body.expires_in || 0);",
							"pm.environment.set('refresh_expires_in', body.refresh_expires_in || 0);",
							"console.log('Token 已更新');"
						]
					}
				}
			]
		},
