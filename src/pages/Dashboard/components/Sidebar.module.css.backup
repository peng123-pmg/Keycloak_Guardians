/* 侧边栏主容器 - 严格按照设计稿 */
.sidebar {
  width: 375px;
  height: 1024px;
  background: rgba(178, 210, 237, 0.5); /* #B2D2ED 50%透明度 */
  display: flex;
  flex-direction: column;
  box-shadow: none;
  position: relative;
}

/* Logo区域 - 严格按照UI图：55px顶部，50px左侧，50px底部间距 */
.logoSection {
  padding: 55px 0 0 50px;
  display: flex;
  align-items: flex-start;
  gap: 0;
  border-bottom: none;
  margin-bottom: 50px;
  position: relative;
}

/* 蓝色方块图标 - 隐藏，UI图中没有显示 */
.logoIcon {
  display: none;
}

/* Logo文字 - "Mysystem" 宋体72px regular，#26880AD，描边#000000 */
.logoText {
  font-family: '宋体', SimSun, serif;
  font-size: 72px;
  font-weight: 400; /* regular */
  color: #26880AD;
  letter-spacing: 0;
  line-height: 1;
  white-space: nowrap;
  margin: 0;
  text-shadow: 
    -1px -1px 0 #000000,
    1px -1px 0 #000000,
    -1px 1px 0 #000000,
    1px 1px 0 #000000;
}

/* 用户信息区域 - 移除此部分，根据UI图不需要 */

/* 菜单区域 */
.menu {
  flex: 1;
  overflow-y: auto;
  padding: 0;
}

.menu::-webkit-scrollbar {
  width: 5px;
}

.menu::-webkit-scrollbar-track {
  background: transparent;
}

.menu::-webkit-scrollbar-thumb {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 3px;
}

.menuItemWrapper {
  width: 100%;
}

/* 菜单项 - 高度30px，默认间距30px */
.menuItem {
  height: 30px;
  padding: 0 40px;
  margin-bottom: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  transition: all 0.2s ease;
  background: transparent;
}

/* 蓝色文字的菜单项 */
.menuItem.blueText .menuLabel {
  color: #5A9BE6;
}

/* "删除文件"到"团队文件管理"之间的特殊间距50px */
.menuItem.topSpacing50 {
  margin-top: 20px; /* 30px默认 + 20px额外 = 50px总间距 */
}

.menuItem:hover {
  background: rgba(255, 255, 255, 0.4);
}

.menuItem.active {
  background: rgba(38, 124, 222, 0.2);
  border-left: 4px solid var(--primary-blue);
}

.menuItem.active .menuLabel {
  color: var(--primary-blue);
  font-weight: 600;
}

.menuLabel {
  font-size: 15px;
  color: #2c2c2c;
  font-weight: 500;
}

/* 二级菜单项 - 左边距90px */
.menuItem.level2 {
  padding-left: 90px !important;
}

/* 三级菜单项 - 左边距140px */
.menuItem.level3 {
  padding-left: 140px !important;
}

.menuItem.level2 .menuLabel,
.menuItem.level3 .menuLabel {
  font-size: 14px;
  font-weight: 400;
  color: #555;
}

/* 箭头图标 - 精确样式 */
.arrow {
  font-size: 12px;
  color: #2c2c2c;
  transition: transform 0.3s ease;
  display: inline-block;
  margin-right: 10px;
}

.arrow.expanded {
  transform: rotate(90deg);
}

/* 子菜单容器 */
.submenu {
  animation: slideDown 0.2s ease;
  overflow: hidden;
}

@keyframes slideDown {
  from {
    opacity: 0;
    max-height: 0;
  }
  to {
    opacity: 1;
    max-height: 500px;
  }
}
